CREATE TABLE movieEntity (
    id INTEGER NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    originalTitle TEXT NOT NULL,
    posterPath TEXT NOT NULL,
    releaseDate TEXT NOT NULL,
    voteAverage REAL NOT NULL,
    popularity REAL NOT NULL,
    status TEXT NOT NULL,
    uploadTimestamp INTEGER NOT NULL
);

insert:
INSERT OR IGNORE
INTO movieEntity
VALUES ?;

getMoviesByStatus:
SELECT *
FROM movieEntity
WHERE status = :status
ORDER BY uploadTimestamp, popularity DESC;

getMovieCountByStatus:
SELECT COUNT(*)
FROM movieEntity
WHERE status = :status;

updateMovieStatus:
UPDATE movieEntity
SET status = :status
WHERE id = :id;